<LinearLayout
    android:id="@+id/viewfor"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cart_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Food Memenu"
                android:textColor="#4B0082"
                android:textSize="24dp" />




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/cart_item_price"
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:textSize="20dp"
                        android:textColor="#4B0082"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_height="wrap_content"
                        android:text="$1.00" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#DF6A90B5"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_height="wrap_content"
                        android:text="Money" />
                </LinearLayout>

                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/split"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                                android:id="@+id/btn_price_giohang"
                                android:layout_width="120dp"
                                android:layout_height="34dp"
                                android:layout_margin="16dp"
                                app:backGroundColor="@color/colordefault"
                                app:initialNumber="1"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"

                                app:finalNumber="10"
                                android:layout_alignParentRight="true">

                            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#EE6A90B5"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_height="wrap_content"
                        android:text="Quantity" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cardImage"
                android:layout_alignParentRight="true"
                android:background="@drawable/img"
                android:layout_width="wrap_content"
                android:layout_marginTop="-8dp"
                android:layout_height="160dp"
                android:src="@drawable/cover_menu_pizza"
                />
        </RelativeLayout>

    </LinearLayout>




</LinearLayout>

</androidx.cardview.widget.CardView>